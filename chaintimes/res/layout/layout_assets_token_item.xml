<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/asset_token_item"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal">
    
		        
        <ImageView 
            android:background="@drawable/btc"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="45dp"
            android:layout_marginLeft="20dp"
            android:layout_height="45dp"/>
        <TextView 
            android:id="@+id/tv_token_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="BTC"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/img_right"
                android:gravity="right"
                android:orientation="vertical">
                
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/tv_padding_5"
                    android:id="@+id/tv_token_balanceval"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tv_padding_5"
                    android:gravity="right"
                    android:id="@+id/tv_token_rmb_val"/>
            </LinearLayout>
            <TextView android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:text="@string/asset_right"
                android:layout_alignParentRight="true"
                android:layout_marginTop="28dp"
                android:textColor="#2E3CC4"
                />
        </RelativeLayout>
</LinearLayout>
